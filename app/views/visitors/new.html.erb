<% content_for :title do %>Rails Bootstrap<% end %>
<% content_for :description do %>Rails Bootstrap Example<% end %>

<div id="mycarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
    <li data-target="#mycarousel" data-slide-to="1"></li>
    <li data-target="#mycarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://lorempixel.com/1170/800/city/9" alt="First slide">
      <div class="carousel-caption">
        <h4>San Francisco</h4>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/7" alt="Second slide">
      <div class="carousel-caption">
        <h4>Sydney</h4>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/6" alt="Third slide">
      <div class="carousel-caption">
        <h4>Paris</h4>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<div class="text-center">
  <h5>Select a Favorite</h5>
  <%= simple_form_for @visitor do |f| %>
    <%= f.error_notification %>
    <%= f.input :favorite, label: false, 
      :as => :radio_buttons_inline, :collection => Visitor::IMAGE_LABELS%>
    <%= f.input :comment, label: false, :placeholder => 'Add a comment...' %>
    <%= f.submit "Choose!", :class => "btn btn-primary"%>
<% end %>
</div>