<% content_for :title do %>Rails Bootstrap<% end %>
<% content_for :description do %>Rails Bootstrap Example<% end %>

<div id="mycarousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
    <li data-target="#mycarousel" data-slide-to="1"></li>
    <li data-target="#mycarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <img src="http://lorempixel.com/1170/800/city/9" alt="First slide">
      <div class="carousel-caption">
        <h4>San Francisco</h4>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/7" alt="Second slide">
      <div class="carousel-caption">
        <h4>Sydney</h4>
      </div>
    </div>
    <div class="item">
      <img src="http://lorempixel.com/1170/800/city/6" alt="Third slide">
      <div class="carousel-caption">
        <h4>Paris</h4>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>




<!-- Button trigger modal -->
<div class="text-center">
  <h5>Select a Favourite</h5>
  <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Choose!
  </button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: <%= @visitor.errors.any? ? 'block' :
'none';%>">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h3 class="modal-title" id="myModalLabel">Select a Favourite</h3>
        </div>
        <div class="modal-body">

          <div class="text-center">
            <%= simple_form_for @visitor, html: { class: 'form-horizontal' } do |f| %>
              <%= f.error_notification %>
              <%= f.input :favourite, label: false, 
              as: :radio_buttons_inline, :collection => Visitor::IMAGE_LABELS,
              wrapper_html: { class: 'form-group' }%>
              <%= f.input :comment, label: false, placeholder: 'Add a comment...',input_html: { class: 'form-control' } %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Choose!", :class => "btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>